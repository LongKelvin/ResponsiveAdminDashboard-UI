        </span>

        <div class="middle">
            <div class="left">
                <h3>Total Expenses</h3>
                <h1>$25.000</h1>
            </div>

            <div class="c-progress">
                <svg>
                    <circle cx='38' cy='38' r='36'>

                    </circle>
                </svg>

                <div class="number">
                    <p>81%</p>
                </div>
            </div>
        </div>
        <small class="text-muted">Last 24 hours</small>
    </div>

    @*END OF EXPENSES*@

    @*INCOME*@

    <div class="income">
        <span class="material-icons-sharp">
            stacked_line_chart
        </span>

        <div class="middle">
            <div class="left">
                <h3>Total Income</h3>
                <h1>$44.000</h1>
            </div>

            <div class="c-progress">
                <svg>
                    <circle cx='38' cy='38' r='36'>

                    </circle>
                </svg>

                <div class="number">
                    <p>81%</p>
                </div>
            </div>
        </div>
        <small class="text-muted">Last 24 hours</small>
    </div>

    @*END OF INCOME*@


</div>
@*END INSIGHTS SECTIONS*@



@*RECENT ORDER SECTION*@

<div class="recent-orders">
    <h2>Recent Orders</h2>

    <table>
        <thead>
            <tr>
                <th>
                    Product Name
                </th>

                <th>
                    Product Number
                </th>

                <th>
                    Payment
                </th>

                <th>
                    Status
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.projductNumber)
                    </td>


                    
                    @if (item.paymentStatus == "Return")
                    {
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.paymentStatus)
                        </td>
                    }
                    else if (item.paymentStatus == "In-progress")
                    {
                        <td class="warning">
                            @Html.DisplayFor(modelItem => item.paymentStatus)
                        </td>
                    }

                    else
                    {
                        <td class="success">
                            @Html.DisplayFor(modelItem => item.paymentStatus)
                        </td>
                    }



                    @if (item.shipping == "Declined")
                    {
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.shipping)
                        </td>
                    }
                    else if (item.shipping == "Pending")
                    {
                        <td class="warning">
                            @Html.DisplayFor(modelItem => item.shipping)
                        </td>
                    }

                    else
                    {
                        <td class="primary">
                            @Html.DisplayFor(modelItem => item.shipping)
                        </td>
                    }

                </tr>
            }



        </tbody>
    </table>
    <a href="#">Show All</a>
</div>

@*END RECENT ORDER SECTION*@




